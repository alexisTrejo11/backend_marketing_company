# QuoteEntity
type Quote {
    id: ID!
    customerModel: Customer!
    opportunity: Opportunity
    validUntil: String!
    subTotal: Float!
    discount: Float!
    totalAmount: Float!
    status: QuoteStatus!
    items: [QuoteItem!]!
    createdAt: String!
    updatedAt: String!
}
input QuoteInput {
    customerId: ID!
    opportunityId: ID!
    validUntil: String!
    status: QuoteStatus!
    items: [QuoteItemInput!]!
}
# QuoteEntity Item
type QuoteItem {
    id: ID!
    quoteEntity: Quote!
