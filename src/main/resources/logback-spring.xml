<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />

    <!-- Use absolute paths for debugging -->
    <property name="LOG_PATH" value="logs" />
    <property name="AUDIT_LOG_PATH" value="${LOG_PATH}/audit" />

    <!-- Console appender for debug -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <appender name="AuditFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Create the file immediately to verify permissions -->
        <file>${AUDIT_LOG_PATH}/audit.log</file>

        <!-- Rolling policy -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${AUDIT_LOG_PATH}/audit.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <!-- More detailed format -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}|%msg%n</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!-- Logger configuration -->

    <!-- Logger for the interceptor -->
    <logger name="at.backend.MarketingCompany.config.logging.audit.GraphQlAuditInterceptor" level="DEBUG">
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- Audit logger (adjust according to your AuditLogger class) -->
    <logger name="at.backend.MarketingCompany.log.audit" level="INFO" additivity="false">
        <appender-ref ref="AuditFile" />
    </logger>

    <!-- Also capture logs from the audit package -->
    <logger name="at.backend.MarketingCompany.config.logging" level="INFO">
        <appender-ref ref="AuditFile" />
    </logger>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>